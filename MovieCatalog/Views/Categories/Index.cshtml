@model List<MovieCatalog.Models.CategoryViewModel>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .list-group .list-group-item {
            padding-left: 1rem;
        }
        .list-group .list-group .list-group-item {
            padding-left: 2rem;
        }
        .list-group .list-group .list-group .list-group-item {
            padding-left: 3rem;
        }
        /* Add as many as you need to support the levels of nesting you require */
    </style>
</head>
<div class="container mt-4">
    <h1>Category Catalog</h1>
    <ul class="list-group">
        @foreach (var category in Model)
        {
        @Html.Partial("_CategoryPartial", category)
        }
    </ul>
</div>